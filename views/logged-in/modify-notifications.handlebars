  <form action="" method="" name="" novalidate>
    <fieldset>

      <!-- Legend -->
      <legend class="panel__hdr islet-ends">
        <span class="container block">
          <span class="panel__hdr__title txt-family-open-sans block">Notifications</span>
        </span>
      </legend>
      <!-- //Legend -->

      <!-- Form fields -->
      <div class="panel__main">
        <div class="divider divider--btm">
          <div class="container island-ends">

            <!-- Form list -->
            <ul>
              <li>
                <input class="align-middle" type="checkbox" id="emailStatements">
