<!-- Intro -->
<div class="intro mrg-base txt-center txt-grey-med">
  <h2>Forgot Password</h2>
</div>
<!-- //Intro -->

<!-- Main -->

<!--
  BACKEND DEV: see the form validation rules in the README: https://github.com/westfield/registered_carpark_ui/blob/master/README.md.
-->

<form class="panel divider divider--btm" action="" method="" name="" novalidate>
  <fieldset>

    <!-- Form fields -->
    <div class="panel__main">
      <div class="divider divider--btm">
        <div class="container island-top islet-btm">

          <p class="txt-grey-med">Please enter your registered email address below and we will send you an email with a link to reset your password.</p>

          <!-- Form row -->
          <div class="grid grid--flush">

            <!-- Email -->
            <div class="grid__item non-palm-one-half">
              <div class="form-field mrg-base js-form-label-focus">
                <label class="form-field__lbl block" for="email">
                  Email
                  <strong class="req-field" title="Required">*</strong>
                </label>
                <input type="email" id="email" class="txt-input" aria-required="true" required>
                <!-- <p class="form-field__msg form-field__msg--validation feedback feedback--inline feedback--error" id="form-error-1">Please enter your email address</p> -->
                <!-- <p class="form-field__msg form-field__msg--validation feedback feedback--inline feedback--error" id="form-error-2">Please enter a valid email address e.g. name@domain.com.</p> -->
              </div>
            </div>
            <!-- //Email -->

          </div>
          <!-- //Form row -->

        </div>
      </div>

      <!-- Form submit -->
      <div class="container island-ends txt-center">
        <button type="submit" class="btn btn--main">Reset Your Password</button>
      </div>
      <!-- //Form submit -->

    </div>
    <!-- //Form fields -->

  </fieldset>
</form>

<!-- //Main -->